@page "/"

<h1>EventEase</h1>

<EventCard Title="Blazor Workshop"
           Location="Online"
           Date="@DateTime.Now.AddDays(7)"
           Description="Learn Blazor with interactive coding!"
           Attending="@isAttending"
           AttendingChanged="@((value) => isAttending = value)" />

<p>You are @(isAttending ? "attending" : "not attending") this event.</p>

@code {
    private bool isAttending = false;
}